    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">All Medicines</h1>
            </div>
            <!-- /.col-lg-12 -->
            <!-- /.row -->


            <div class="wrapper" style="padding-top:10em; ">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>NAME </th>
                            <th>CATEGORY</th>
                            <th>PRICE</th>
                            <th>COMPANY</th>
                            <th>POTENCY</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var s in Model)
                        {
                            <tr>
                                <td>@s.Id</td>
                                <td>@s.name</td>
                                <td>@s.category</td>
                                <td>@s.price</td>
                                <td>@s.company</td>
                                <td>@s.potency</td>


                                <td>@Html.ActionLink("Edit", "Editmed", new { id = s.Id }, new { @class = "btn btn-success" })<button onclick="showDialog(@s.Id)" class="btn btn-danger">Delete</button></td>
                            </tr>
                        }

                    </tbody>
                </table>
                <script>
                    function showDialog(x) 
                    {
                        var r = confirm("Do you want to continue?");
                        if (r == true)
                            window.location.assign("/Admin/Delmed?id=" + x);
                        else
                            ;
                    }

                </script>


            </div>
        </div>
    </div>
    <!-- /.row -->
</div>
