@{
    ViewBag.Title = "Login";
}





<div class="container" style="align-content:center">
    
    <h2>Enter your username and password:</h2>
   <br />
    <br />

    
    <form class="form-horizontal" method="post" action="/Home/Verify">
        <div class="form-group">
            <label for="name" class="col-sm-2 control-label">Username</label>
         
            <div class="col-sm-5">
                <input type="text" class="form-control" name="name" placeholder="xyz123" required>
                <br />
                <br />
                <br />
            </div>
        </div>
        <div class="form-group">
            <label for="pass" class="col-sm-2 control-label">Password</label>
            <div class="col-sm-5">
                <input type="password" class="form-control" name="pass" placeholder="******" required>
            </div>
        </div>
        <br />
        <br />
       
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <label style="font-family:'Book Antiqua';font-size:15px;">
                        <br />
                        <input type="checkbox"> Remember Me
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary" style="font-family:'Book Antiqua'">LOGIN</button>
            </div>
        </div>
    </form>
</div>

