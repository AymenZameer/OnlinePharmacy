@{
    ViewBag.Title = "Suggestions";
    Layout = "~/Views/Shared/viewlog.cshtml";
}

<h2>Post your suggestions </h2>
<br />
<br />
<div class="container">
    <div class="col-lg-12">
        <form class="form-horizontal" method="post" action="/LoggedIn/SaveSuggestion">
            <input type="hidden" name="cid" value="@ViewBag.User.Id" />
            <textarea name="sugg" style="width:100%; min-height:200px; font-size:26px; font-family:'Book Antiqua'" ></textarea>
            <br />
            <br />
            <button type="submit" class="btn btn-danger" style="font-family:'Book Antiqua'; float:right">Post</button>
        </form>
    </div>
</div>
