@{
    ViewBag.Title = "EditProfile";
    Layout = "~/Views/Shared/viewlog.cshtml";
}

<h2>EDIT YOUR PROFILE</h2>
<div class="container">
    <form class="form-horizontal" method="post" action="/LoggedIn/UpdateProfile">
        <div class="form-group">
            <label for="name" class="col-sm-2 control-label">Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="name" placeholder="xyz123">
                <br />
                <br />
            </div>
        </div>
        <div class="form-group">
            <label for="pass" class="col-sm-2 control-label">Password</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" name="password" placeholder="******" >
                <br />
                <br />
            </div>
        </div>
        <div class="form-group">
            <label for="email" class="col-sm-2 control-label">Email</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" name="email" placeholder="xyz@pqr.com" >

                <br />
                <br />
            </div>
        </div>
        <div class="form-group">
            <label for="num" class="col-sm-2 control-label">Contact #</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" name="num" placeholder="0320-------" >

            </div>
            <br />
            <br />
        </div>


        <div class="form-group">
            <label for="Address" class="col-sm-2 control-label">Address</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="address" placeholder="House#, City,Country">
                <br />
                <br />
            </div>
        </div>
      
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-success" style="font-family:'Book Antiqua'; ">Save Changes</button>
            </div>
        </div>
</form>
</div>