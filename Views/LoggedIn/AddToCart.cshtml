@{
    ViewBag.Title = "ViewCart";
    Layout = "~/Views/Shared/viewlog.cshtml";
}
@using OnlinePharmacy.Models;
<div class="wrapper" style="padding-top:10em; " >
    <div class="col-lg-12" style="font-family:'Book Antiqua'; font-size:16px">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>QUANTITY </th>
                <th>PRICE</th>
                <th>DATE</th>
               
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Order s in Model)
            {

                <tr>

                    <td>@s.Id</td>
                    <td>@s.quantity  </td>
                    <td>@s.price</td>
                    <td>@s.orddate</td>
                    

                    <td><button onclick="showDialog(@s.Id)" class="btn btn-warning">Remove from Cart</button></td>
                </tr>
            }

        </tbody>

    </table>
    <script>
        function showDialog(x) {
            var r = confirm("Do you want to remove this order?");
            if (r == true)
                window.location.assign("/LoggedIn/RemoveFromCart");
            else
                ;
        }
    </script>


</div>
    

    </div>

